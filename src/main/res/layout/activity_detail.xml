<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ce93d8"
        android:transitionGroup="false"
        tools:context="com.example.android.cinemate.DetailActivity">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            app:layout_constraintLeft_toRightOf="@+id/detailRating"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle"/>

        <ImageView
            android:id="@+id/detailMovieImageView"

            android:layout_width="109dp"
            android:layout_height="153dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/detailOverview"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailMovieImageView"
            tools:text="After getting a green card in exchange for assassinating a Cuban government official, Tony Montana (Al Pacino) stakes a claim on the drug trade in Miami."/>

        <TextView
            android:id="@+id/detailTitle"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_marginTop="82dp"
            android:gravity="center_vertical"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Scarface"
            />

        <TextView
            android:id="@+id/detailYear"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="86dp"
            app:layout_constraintLeft_toRightOf="@+id/detailMovieImageView"
            app:layout_constraintTop_toBottomOf="@+id/detailTitle"
            tools:text="2017"/>

        <TextView
            android:id="@+id/detailRating"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="23dp"
            app:layout_constraintLeft_toLeftOf="@+id/detailYear"
            app:layout_constraintTop_toBottomOf="@+id/detailYear"
            tools:text="8.5/10"/>

        <TextView
            android:id="@+id/trailersLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="7dp"
            android:text="Trailers"
            android:textSize="30sp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailOverview"/>

        <TextView
            android:id="@+id/reviewLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="8dp"
            android:text="Reviews"
            android:textSize="30sp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trailerRecyclerView"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/trailerRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trailersLabelTextView">
        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/reviewRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewLabelTextView">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/detailTagline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-23dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="23dp"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintLeft_toLeftOf="@+id/detailRating"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailRating"
            tools:text="Before Gru,they had a history of bad bosses"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>